@model SolforbOrdersTest.Models.OrderViewModel

@{
    ViewData["Title"] = "Delete";
}


<h2>Вы действительно хотите удалить этот заказ?</h2>
<h3>Заказ № @Model.Number</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProviderName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProviderName)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.First().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.First().Unit)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <a type="button" class="btn btn-outline-secondary" asp-action="Index">Вернуться к списку заказов</a>
        <button type="submit" class="btn btn-danger">Удалить</button>
    </form>
</div>
